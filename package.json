{
  "name": "@makerx/ts-toolkit",
  "version": "3.1.0",
  "description": "This cli facilitates the creation of boilerplate files in a new typescript repo",
  "main": "index.js",
  "bin": {
    "tstk": "bin/tstk.js"
  },
  "scripts": {
    "debug": "ts-node ./src/run-cli",
    "build": "run-s build:*",
    "build:0-clean": "rimraf dist",
    "build:1-compile": "tsc -p tsconfig.json",
    "lint": "eslint src/** --fix",
    "format": "prettier --write .",
    "install-local-packages": "npm install @makerx/eslint-config@./packages/eslint -D && npm i -D @makerx/prettier-config@./packages/prettier && npm i -D @makerx/ts-config@./packages/ts"
  },
  "author": "MakerX",
  "license": "unlicensed",
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "commander": "^11.0.0",
    "compare-versions": "^6.0.0",
    "cross-fetch": "^4.0.0",
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "@makerx/eslint-config": "file:packages/eslint",
    "@makerx/prettier-config": "file:packages/prettier",
    "@makerx/ts-config": "file:packages/ts",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
