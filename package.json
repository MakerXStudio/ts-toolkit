{
  "name": "@makerx/ts-toolkit",
  "version": "3.0.0",
  "description": "This cli facilitates the creation of boilerplate files in a new typescript repo",
  "main": "index.js",
  "bin": {
    "tstk": "bin/tstk.js"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:0-clean": "rimraf dist",
    "build:1-compile": "tsc -p tsconfig.json",
    "lint": "eslint src/** --fix",
    "format": "prettier --write .",
    "install-local-packages": "npm install @makerx/eslint-config@./packages/eslint -D && npm i -D @makerx/prettier-config@./packages/prettier && npm i -D @makerx/ts-config@./packages/ts"
  },
  "author": "MakerX",
  "license": "unlicensed",
  "dependencies": {
    "@colors/colors": "^1.5.0",
    "commander": "^9.4.0",
    "compare-versions": "^5.0.1",
    "cross-fetch": "^3.1.5",
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "@makerx/eslint-config": "file:packages/eslint",
    "@makerx/prettier-config": "file:packages/prettier",
    "@makerx/ts-config": "file:packages/ts",
    "eslint": "8.22.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
