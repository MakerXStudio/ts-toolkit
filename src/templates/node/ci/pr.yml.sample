name: Pull Request

on:
  pull_request:
    branches: [main]
    paths-ignore:
      - '**/*.md'

permissions:
  contents: read
  checks: write

jobs:
  pull_request:
    uses: makerxstudio/shared-config/.github/workflows/node-ci.yml@main
    with:
      node-version: 20.x
      audit-script: npm run audit
      output-test-results: true
      test-script: npm run test:ci
      run-build: true
